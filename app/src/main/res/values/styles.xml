<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--Написанное нами-->

    <!--Стиль для текста в меню-->
    <style name="MenuFont">
        <item name="android:textSize">@dimen/menu_buttons_text_size</item>
        <item name="android:textColor">@color/button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/orbitron</item>
    </style>

    <!--Стиль для лого-->
    <style name="Logo">
        <item name="android:textSize">@dimen/main_logo_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">normal|italic</item>
        <item name="android:clickable">false</item>
        <item name="android:fontFamily">@font/orbitron</item>
    </style>

    <!--Стиль для никнейма-->
    <style name="UserNickname_mainMenu">
        <item name="android:textColor">@color/button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:fontFamily">@font/orbitron</item>
    </style>

    <!--Стиль для заголовков-->
    <style name="TitleFont">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">false</item>
        <item name="android:fontFamily">@font/orbitron</item>
    </style>

    <!--Стиль для таблицы лидеров-->
    <style name="ScoreboardFont">
        <item name="android:textSize">@dimen/scoreboard_text_size</item>
        <item name="android:textColor">@color/button</item>
        <item name="android:clickable">false</item>
        <item name="android:fontFamily">@font/orbitron</item>
    </style>

    <!--Стиль для нотификаций-->
    <style name="NotificationFont">
        <item name="android:textSize">@dimen/notification_text_size</item>
        <item name="android:textColor">@color/button</item>
        <item name="android:clickable">false</item>
        <item name="android:fontFamily">@font/orbitron</item>
    </style>

    <!--Стиль для страницы логина-->

    <!--Стиль для кнопок клавиатуры в игре-->
    <style name="GameButton">
        <item name="android:layout_margin">@dimen/game_keyboard_margin_buttons</item>
    </style>

    <!--Стиль для игрового поля - бегущей строки-->
</resources>
